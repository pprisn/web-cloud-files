    <h3>Регистрация</h3>
    <ul>
      <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
      <li><%= error.message %></li>
      <% }) %> <% } %>
    </ul>

<form class="form-horizontal" action='/users/register' method="POST">
  <fieldset>
    <div id="legend">
      <legend class="">Форма регистрации</legend>
    </div>
    <div class="control-group">
      <!-- Username -->
      <label class="control-label"  for="fullname">Имя пользователя</label>
      <div class="controls">
        <input type="text" id="fullname" name="fullname" placeholder="Имя" class="input-xlarge">
        <p class="help-block">Имя пользователя может состоять из символов или цифр, без пробелов</p>
      </div>
    </div>
 
    <div class="control-group">
      <!-- E-mail -->
      <label class="control-label" for="emailaddress">E-mail</label>
      <div class="controls">
        <input type="text" id="emailaddress" name="emailaddress" placeholder="Email" class="input-xlarge">
        <p class="help-block">Пожалуйста укажите свой E-mail</p>
      </div>
    </div>
 
    <div class="control-group">
      <!-- Password-->
      <label class="control-label" for="password">Password</label>
      <div class="controls">
        <input type="password" id="password" name="password" placeholder="" class="input-xlarge">
        <p class="help-block">Пароль должен быть от 4 символов</p>
      </div>
    </div>
 
    <div class="control-group">
      <!-- Password -->
      <label class="control-label"  for="password2">Пароль (Подтвердите ввод)</label>
      <div class="controls">
        <input type="password" id="password2" name="password2" placeholder="" class="input-xlarge">
        <p class="help-block">Пожалуйста повторите ввод пароля</p>
      </div>
    </div>
 
<div class="control-group">
  <!-- City -->
  <label class="control-label"  for="city">Город/Населенный пункт</label>
  <div class="controls">
    <input type="city" id="city" name="city" placeholder="" class="input-xlarge">
    <p class="help-block">Пожалуйста введите свой город/населенный пункт</p>
  </div>
  </div>
  <div class="control-group">
   <!-- Country -->
    <label class="control-label"  for="сountry">Страна</label>
   <div class="controls">
      <input type="country" id="country" name="country" placeholder="" class="input-xlarge">
      <p class="help-block">Введите свою страну</p>
   </div>
   </div>
   <div class="control-group">
      <!-- Button -->
   <div class="controls">
        <button class="btn btn-success">Зарегистрировать</button>
   </div>
   </div>
  </fieldset>
  <a href="/users/login">Имеете регистрацию? Войдите здесь</a>
</form>
</body>
