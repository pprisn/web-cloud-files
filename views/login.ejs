<form class="form-horizontal" action='/users/login' method="POST">
  <fieldset>
    <div id="legend">
      <legend class="">Register</legend>
    <ul>
      <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
      <li><%= error.message %></li>
      <% }) %> <% } %>
    </ul>

    <ul>
      <% if(messages.success_msg) { %>
      <li><%= messages.success_msg %></li>
      <% } %>
    </ul>

    <ul>
      <% if (messages.error) { %>
      <li><%= messages.error %></li>
      <% } %>
    </ul>
    </div>
    <div class="control-group">
      <!-- E-mail -->
      <label class="control-label" for="emailaddress">E-mail</label>
      <div class="controls">
        <input type="text" id="emailaddress" name="emailaddress" placeholder="Email" class="input-xlarge">
        <p class="help-block">Пожалуйста укажите свой E-mail</p>
      </div>
    </div>
 
    <div class="control-group">
      <!-- Password-->
      <label class="control-label" for="password">Password</label>
      <div class="controls">
        <input type="password" id="password" name="password" placeholder="" class="input-xlarge">
        <p class="help-block">Введите свой пароль</p>
      </div>
    </div>
    <div class="control-group">
      <!-- Button -->
      <div class="controls">
        <button class="btn btn-success">Войти</button>
      </div>
    </div>
  </fieldset>
  <a href="/users/register">Зарегистрироваться на сайте Web-Cloud-Files</a>
</form>
</body>
